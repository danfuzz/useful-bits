# Figure out the symlink-resolved program name and directory.
progName="$(readlink -f "$0")" || exit "$?"
progDir="${progName%/*}"
progName="${progName##*/}"

. "${progDir}/init"


#
# Argument parsing
#

function usage {
    print-usage $'
    Usage:

    ${name} <json-value>

    Prints the length of the given JSON value, per the `jq` length rules.

    ${name} [--help | -h]
      Displays this message.
    '

    exit "$1"
}

# Want help?
opt-action --call=usage --value=0 help/h

# JSON value.
rest-arg --call=parse-rest
value=''
function parse-rest {
    if (( $# < 1 )); then
        echo 1>&2 'Missing argument: <json-value>'
        return 1
    elif (( $# > 1 )); then
        echo 1>&2 'Too many arguments.'
        return 1
    fi

    value="$1"
}

process-args "$@" || usage "$?"


#
# Main script
#

exec jq --null-input --argjson value "${value}" '$value | length'
