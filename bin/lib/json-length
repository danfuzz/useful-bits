# Figure out the symlink-resolved program name and directory.
progName="$(readlink -f "$0")" || exit "$?"
progDir="${progName%/*}"
progName="${progName##*/}"

. "${progDir}/init"


#
# Argument parsing
#

function usage {
    print-usage $'
    Usage:

    ${name} <json-value>

    Prints the length of the given JSON value, per the `jq` length rules.

    ${name} [--help | -h]
      Displays this message.
    '

    exit "$1"
}

# Error during argument processing?
argError=0

# JSON value.
value=''

while (( $# > 0 )); do
    case "$1" in
        -h|--help)
            argError=-1 # `-1` suppresses error exit after displaying usage.
            break
            ;;
        --)
            # Explicit end of options.
            shift
            break
            ;;
        -?*)
            echo 1>&2 "Unknown option: $1"
            argError=1
            break
            ;;
        *)
            # Non-option argument.
            break
            ;;
    esac

    shift
done

if (( $# > 0 )); then
    value="$1"
else
    echo 1>&2 'Missing JSON value argument.'
    argError=1
fi

if (( argError )); then
    usage "${argError}"
fi


#
# Main script
#

exec jq --null-input --argjson value "${value}" '$value | length'
