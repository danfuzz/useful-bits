# Figure out the symlink-resolved program name and directory.
progName="$(readlink -f "$0")" || exit "$?"
progDir="${progName%/*}"
progName="${progName##*/}"

. "${progDir}/init"


#
# Argument parsing
#

function usage {
    print-usage $'
    Usage:

    ${name} <json-value>

    Prints the length of the given JSON value, per the `jq` length rules.

    ${name} [--help | -h]
      Displays this message.
    '

    exit "$1"
}

# Want help?
opt-action --call=usage --value=0 help/h

# JSON value.
rest-arg --call=parse-rest
value=''
function parse-rest {
    case "$#" in
        0)
            echo 1>&2 'Missing JSON value argument.'
            return 1
            ;;
        1)
            value="$1"
            ;;
        *)
            echo 1>&2 'Extra arguments.'
            return 1
            ;;
    esac
}

process-args "$@" || usage "$?"


#
# Main script
#

exec jq --null-input --argjson value "${value}" '$value | length'
